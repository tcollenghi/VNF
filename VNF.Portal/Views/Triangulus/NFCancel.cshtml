            data: {
                pstrFilial: pstrFilial,
                pnumeroNFe: pnumeroNFe,
                pstrSerie: pstrSerie,
                pstrData: pstrData
            },
            error: function (erro) {
                $.smallBox({
                    title: "Erros",
                    content: "Não foi possível completar sua solicitação!",
                    color: "#C46A69",
                    icon: "fa fa-exclamation-circle",
                    buttons: '[Fechar]',
                    timeout: 4000
                });
            },
            success: function (oReturn) {
                if (oReturn.result === "cancelar") {
