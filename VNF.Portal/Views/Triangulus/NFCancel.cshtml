<script language="javascript">

    function Cancelar(pstrNF, pstrData, pstrFilial) {
        //alert(pstrNF);
        //alert(pstrSerie);
        //alert(pstrData);
        //alert(pstrFilial);
        $.ajax({
            async: true,
         //   cache: false,
            type: 'POST',
            url: '@Url.Action("Validar", "Triangulus")',
            dataType: 'json',
            data: {
                pstrNF: pstrNF,
                pstrData: pstrData,
                pstrFilial: pstrFilial
            },
            error: function (erro) {
                $.smallBox({
                    title: "Erros",
                    content: "Não foi possível completar sua solicitação!",
                    color: "#C46A69",
                    icon: "fa fa-exclamation-circle",
                    buttons: '[Fechar]',
                    timeout: 4000
                });
            },
            success: function (oReturn) {
                if (oReturn.result === "cancelar") {
                    $.SmartMessageBox({
                        title: "Cancelamento",
                        content: oReturn.data,
                        buttons: '[Não][Sim]'
                    }, function (ButtonPressed) {
                        if (ButtonPressed === "Sim") {
                            $.ajax({
                                async: true,
                                //cache: false,
                                type: 'POST',
                                url: '@Url.Action("CancelarNFE", "Triangulus")',
                                dataType: 'json',
                                data: {
                                    pstrNF: pstrNF,
                                    pstrData: pstrData,
                                    pstrFilial: pstrFilial
                                },
                                error: function (erro) {
                                    $.smallBox({
                                        title: "Erros",
                                        content: erro.data,
                                        color: "#C46A69",
                                        icon: "fa fa-exclamation-circle fadeInLeft animated",
                                        buttons: '[Fechar]',
                                        timeout: 4000
                                    });
                                },
                                success: function (oReturn) {
                                    //location.reload();
                                    $.smallBox({
                                        title: "Sucesso",
                                        content: oReturn.data,
                                        color: "#739E73",
                                        icon: "fa fa-exclamation-circle fadeInLeft animated",
                                        buttons: '[Fechar]',
                                        timeout: 4000
                                    });
                                }
                            });
                        }
                    });
                } else {
                    if (oReturn.result === "ok") {
                        $.smallBox({
                            title: "VNF NELES",
                            content: oReturn.data,
                            color: "#739E73",
                            icon: "fa fa-check-circle",
                            timeout: 4000
                        });
                    }
                    else {
                        $.smallBox({
                            title: "VNF NELES",
                            content: oReturn.data,
                            color: "#C46A69",
                            icon: "fa fa-check-circle",
                            timeout: 4000
                        });
                    }
                }

            }
        });
    }


    function Inutilizar(pstrFilial, pnumeroNFe, pstrSerie, pstrData) {
        //alert(pstrNF);
        //alert(pstrSerie);
        //alert(pstrData);
        //alert(pstrFilial);
        $.ajax({
            async: true,
         //   cache: false,
            type: 'POST',
            url: '@Url.Action("validarInutilizacao", "Triangulus")',
