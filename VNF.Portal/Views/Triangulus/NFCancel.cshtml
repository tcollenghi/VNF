                        }
                    });
                } else {
                    if (oReturn.result === "ok") {
                        $.smallBox({
                            title: "VNF NELES",
                            content: oReturn.data,
                            color: "#739E73",
                            icon: "fa fa-check-circle",
                            timeout: 4000
                        });
                    }
                    else {
                        $.smallBox({
                            title: "VNF NELES",
                            content: oReturn.data,
                            color: "#C46A69",
                            icon: "fa fa-check-circle",
                            timeout: 4000
                        });
                    }
                }

            }
        });
    }
</script>

