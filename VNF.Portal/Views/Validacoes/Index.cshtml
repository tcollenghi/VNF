@using MetsoFramework.Utils

@model IEnumerable<VNF.Portal.Models.TbValidacoes>

@{
    ViewBag.Title = "Validações";
}

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-angle-double-right fa-fw "></i>
            Validações
        </h1>
    </div>
</div>

<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">
                <header class="navigation-wrap">
                    <div class="col-md-12 col-xs-12">
                        <div class="btn-group  margin-top-5 right">
                            <a class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="Novo()"><i class="fa fa-plus"></i> Novo</a>

                            <a class="btn btn-danger" id="deletelinha"><i class="fa fa-trash-o"></i> Excluir</a>
                        </div>
                    </div>
                </header>
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover table-click" width="100%">
                            <thead>
                                <tr>
                                    <th data-class="expand">Codigo</th>
                                    <th data-hide="phone,tablet">Texto</th>
                                    <th data-hide="phone,tablet">Notificar Compras</th>
                                    <th data-hide="phone,tablet">Notificar Fornecedor</th>
                                    <th data-hide="phone,tablet">Permitir anulação Compras</th>
                                    <th data-hide="phone,tablet">Permitir anulação fiscal</th>
                                    <th data-hide="phone,tablet">Validar NFe</th>
                                    <th data-hide="phone,tablet">Validar Cte</th>
                                    <th data-hide="phone,tablet">Validar Tal</th>
                                    <th data-hide="phone,tablet">Validar Fat</th>
                                    <th data-hide="phone,tablet">Validar Tcom</th>
                                    <th data-hide="phone,tablet">Validar NFS</th>
                                    <th data-hide="phone,tablet">Exceções</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (VNF.Portal.Models.TbValidacoes i in Model)
                                {
                                    <tr id="Row_@i.id_validacao" onclick="selectRow('@i.id_validacao')">
                                        <td>
                                            @i.val_codigo
                                        </td>
                                        <td>
                                            @i.val_titulo_usuario
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_notificar_compras, new { id = "val_notificar_compras_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_notificar_compras + "','notificar_compras')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_notificar_fornecedor, new { id = "val_notificar_fornecedor_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_notificar_fornecedor + "','notificar_fornecedor')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_permitir_anulacao_compras, new { id = "val_permitir_anulacao_compras_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_permitir_anulacao_compras + "','anulacao_compras')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_permitir_anulacao_fiscal, new { id = "val_permitir_anulacao_fiscal_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_permitir_anulacao_fiscal + "','anulacao_fiscal')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_nfe, new { id = "val_validar_nfe_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_nfe + "','validar_nfe')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_cte, new { id = "val_validar_cte_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_cte + "','validar_cte')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_tal, new { id = "val_validar_tal_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_tal + "','validar_tal')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_fat, new { id = "val_validar_fat_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_fat + "','validar_fat')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_tcom, new { id = "val_validar_tcom_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_tcom + "','validar_tcom')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="smart-form">
                                            <label class="checkbox">
                                                @Html.CheckBoxFor(modelitem => i.val_validar_nfs, new { id = "val_validar_nfs_" + i.id_validacao.ToString(), @onclick = "Check('" + i.id_validacao + "','" + i.val_validar_nfs  + "','validar_nfs')" })
                                                <i></i>
                                            </label>
                                        </td>
                                        <td class="center">
                                            <a onclick="SelectedID(@i.id_validacao)" class="btn btn-xs btn-default" data-toggle="modal" data-target="#excecoes"><i class="fa fa-info-circle"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>

<input type="hidden" id="Hdnid_validacao" />
<input type="hidden" id="IdEdit" />
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true" style="margin-top:50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                </button>
                <h4 id="idTitulo" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "Validacoes", FormMethod.Post, new { @class = "smart-form" }))
                {
                    <fieldset>
                        <div class="row">
                            <section class="col col-6">
                                <label class="input">
                                    Código
                                    @Html.TextBox("txtvalcodigo", "", new { @onkeypress = "return onlyInt(event)", @maxlength = 150 })
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    Titulo Usuário
                                    @Html.TextBox("txtvaltitulousuario", "", new { @onkeypress = "return onlyInt(event)", @maxlength = 150 })
                                </label>
                            </section>
                            <section class="col col-6">
                                <label class="input">
                                    Texto Reprovação
                                    @Html.TextBox("txtvaltextoreprovacao", "", new { @onkeypress = "return onlyInt(event)", @maxlength = 150 })
                                </label>
                            </section>
                        </div>
                    </fieldset>
                }
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" id="btnSalvarConPag" onclick="Salvar()"><i class="fa fa-check"></i><span class="text-btn"> Salvar</span></a>
                <a class="btn btn-primary" id="btnFecharModal" data-dismiss="modal"><i class="fa fa-times"></i><span class="text-btn"> Fechar</span></a>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="excecoes" tabindex="-1" role="dialog" aria-hidden="true" style="margin-top:50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Exceções</h4>
            </div>
            <div class="modal-body">
                <section>
                    <h6 class="margin-top-10 margin-bottom-5">Tipo exeção</h6>
                    <label class="input">
                        @Html.MetsoDropDownList("Excecao", ViewBag.Excecao as IEnumerable<SelectListItem>, "(Selecione)", new { @onkeypress = "KeyEnter(event);", @onchange = "getExcecoes();" })
                    </label>
                </section>
                <section id="widget-grid" class="">
                    <div class="row">
                        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                                <header class="navigation-wrap"></header>
                                <div>
                                    <!-- widget edit box -->
                                    <div class="jarviswidget-editbox">
                                        <!-- This area used as dropdown edit box -->
                                        
                                    </div>
                                    <div class="widget-body no-padding">
                                        <table id="dt_excecao" class="table table-striped table-bordered table-hover table-click" width="100%">
                                            @*<thead>
                                                <tr>
                                                    <th width="90%"></th>
                                                </tr>
                                            </thead>*@
                                            <tbody>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <a id="btAddExcecoes" class="btn btn-primary" href="#"><i class="fa fa-check"></i><span class="text-btn"> Adicionar</span></a>
                <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i><span class="text-btn"> Fechar</span></button>
            </div>
        </div>
    </div>
</div>

@section pagespecific {

    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>

    <script src="~/Scripts/views/_global.js"></script>
    <script src="~/Scripts/views/Validacoes/Validacoes.js"></script>

    <script src="~/Scripts/views/PermissaoUsuario.js"></script>
    <script>PermissaoUsuario('@(ViewBag.Acesso)')</script>

    <script type="text/javascript">
        /* BASIC ;*/
        var responsiveHelper_dt_excecao = undefined;
        var responsiveHelper_dt_basic = undefined;
        var responsiveHelper_datatable_fixed_column = undefined;
        var responsiveHelper_datatable_col_reorder = undefined;
        var responsiveHelper_datatable_tabletools = undefined;

        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };

        $('#dt_basic').dataTable({
            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
            "preDrawCallback": function () {
                // Initialize the responsive datatables helper once.
                if (!responsiveHelper_dt_basic) {
                    responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                }
            },
            "rowCallback": function (nRow) {
                responsiveHelper_dt_basic.createExpandIcon(nRow);
            },
            "drawCallback": function (oSettings) {
                responsiveHelper_dt_basic.respond();
            }
        });

        $('#dt_excecao').dataTable({
            "iDisplayLength": 5,
            "lengthMenu": [5, 10],

            "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            "autoWidth": true,
            "preDrawCallback": function () {
                // Initialize the responsive datatables helper once.
                if (!responsiveHelper_dt_excecao) {
                    responsiveHelper_dt_excecao = new ResponsiveDatatablesHelper($('#dt_excecao'), breakpointDefinition);
                }
            },
            "rowCallback": function (nRow) {
                responsiveHelper_dt_excecao.createExpandIcon(nRow);
            },
            "drawCallback": function (oSettings) {
                responsiveHelper_dt_excecao.respond();
            }
        });

        /* END BASIC */

        $(".table-click tr").on('click', function (e) {
            $(this).siblings().removeClass("selecionado");
            $(this).toggleClass("selecionado");
        });
        // With Callback

       

    </script>

}
