@using MetsoFramework.Utils
@using MetsoAdmin.Controllers

@{
    ViewBag.Title = "Acesso";
}

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-angle-double-right fa-fw "></i>
            Acesso
        </h1>
    </div>

    <div id="demo" class="demo">
        <span id="demo-setting"><i class="fa fa-search txt-color-blueDark"></i></span>
        <div class="smart-form">
            <legend class="no-padding margin-bottom-10">Filtros</legend>
            <div class="custom-scroll scroll-y">
                @*<section>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">Tela/Função</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtCodigoPagina" name="txtCodigoPagina" onchange="KeyEnter(event);">
                    </label>
                </section>*@
                <section>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">ID do Usuário/SAP</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtUser" name="txtUser" onchange="KeyEnter(event);">
                    </label>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">Código da tela</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtCodigoPagina" name="txtCodigoPagina" onchange="KeyEnter(event);">
                    </label>
                </section>
                <section>
                    <div onclick="LoadData();" class="btn btn-xs btn-block btn-primary margin-top-10"><i class="fa fa-search margin-top-5 margin-bottom-5"></i>Buscar</div>
                </section>
            </div>
        </div>
    </div>

    @Html.Hidden("hdfId")
    @Html.Hidden("hdfTela")

    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-12">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-color-blueDark" data-widget-sortable="false" data-widget-editbutton="false">
            <header>
                <span class="widget-icon"><i class="fa fa-shield"></i></span>
                <h2>Gerenciar Acessos</h2>

                <ul class="nav nav-tabs pull-right in" id="myTab">
                    <li id="tabBloqueado" class="bg-color-blueDark active">
                        <a data-toggle="tab" href="#s1"><span onclick="LoadData();">Bloqueados</span> </a>
                    </li>

                    <li id="tabLiberado" class="bg-color-blueDark">
                        <a data-toggle="tab" href="#s2"><span onclick="GetDataLiberado();">Liberados</span> </a>
                    </li>

                </ul>

            </header>
            <div id="definicaoTabela">
                @{
                    Html.RenderPartial("ViewDados");
                }
            </div>
        </div>

        <div class="widget-body">
            <div class="smart-form">
                <footer class="border">
                    <a class="btn btn-primary" onclick="BloqueiaUsuario()" id="btnBloquear"><i class="fa fa-lock"></i><span class="text-btn"> Bloquear</span></a>
                    <a class="btn btn-primary" onclick="LiberaUsuario()" id="btnLiberar"><i class="fa fa-unlock"></i><span class="text-btn"> Liberar</span></a>
                </footer>
            </div>
        </div>

    </article>
    <!-- END COL -->

</div>
@section head {
    <script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
}
@section pagespecific {



    <!-- Page Script -->
    <script src="~/Scripts/views/_global.js"></script>
    <script src="~/Scripts/views/Acesso/Acesso.js"></script>

    <script src="~/Scripts/views/PermissaoUsuario.js"></script>
    <script>PermissaoUsuario('@(ViewBag.Acesso)')</script>
}



