@model System.Data.DataTable
<!-- Widget ID (each widget will need unique ID)-->
<div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false">

    <header class="navigation-wrap">
        <div class="col-md-10 col-xs-12">
            <div class="btn-group margin-top-5 left">
                <a class="btn btn-default" onclick="ExportarNfe();" data-toggle="modal"><i class="fa fa-file-excel-o"></i><span class="text-btn"> Exportar</span></a>
            </div>
        </div>
        <div class="col-md-2 col-xs-12">
            <div class="btn-group btn-group-justified margin-top-5 right">
                <a class="btn btn-primary" onclick="Edit();"  data-toggle="modal" data-target="#divDetalhe" ><i class="fa fa-search"></i><span class="text-btn"> Visualizar detalhes</span></a>
            </div>
        </div>
    </header>

    <div id="divData">
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body no-padding">
            <table id="dttNotaFiscal" datatables_fixedheader="top" datatables_fixedheader_offsettop="60" class="table table-striped table-bordered table-hover table-click" width="100%">
                <thead>
                    <tr>
                        <th style="width:10%">Nº Doc.</th>
                        <th style="width:30%">Fornecedor</th>
                        <th style="width:10%">Data Emissão</th>
                        <th style="width:15%">CNPJ</th>
                        <th style="width:10%">Relevante</th>
                        <th style="width:15%">Situação</th>
                        <th style="width:10%">Enviado IP</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
                <tfoot class="hide">
                    <tr>
                        <th colspan="7"><div class="loading-grid"><img alt="loading" class="left" id="imgLoadingProductions" name="imgLoadingProductions" src="/images/loading-small_white.gif" title="loading"><h4 class="left">carregando...</h4></div></th>
                    </tr>
                </tfoot>


            </table>

        </div>
        <!-- end widget content -->

    </div>

</div>

@section pagespecific {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
    <script src="~/Scripts/Metso.js"></script>

    <!-- Page Script -->
    <script src="~/Scripts/views/_global.js"></script>
    <script src="~/Scripts/views/Portaria/Dados.js"></script>
}
