@using MetsoFramework.Utils
@using MetsoAdmin.Controllers

@{
    ViewBag.Title = "Fornecedores";
}

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-angle-double-right fa-fw "></i>
            Fornecedores
        </h1>
    </div>

    <div class="demo">
        <span id="demo-setting"><i class="fa fa-search txt-color-blueDark"></i></span>
        @using (Html.BeginForm("GetData", "Fornecedores", FormMethod.Post, new { @class = "smart-form" }))
        {
            <legend class="no-padding margin-bottom-10">Filtros</legend>
            <div class="custom-scroll scroll-y">
                <section>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">CNPJ</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtCNPJ" name="txtCNPJ">
                    </label>
                </section>
                <section>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">Razão Social</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtRazaoSocial" name="txtRazaoSocial">
                    </label>
                </section>
                <section>
                    <h6 class="margin-top-10 semi-bold margin-bottom-5">Código SAP</h6>
                    <label class="input">
                        <input type="text" class="input-sm" id="txtCodigoSAP" name="txtCodigoSAP" onkeypress = "return onlyInt(event)">
                    </label>
                </section>
                <section>
                    <div onclick="LoadData();" class="btn btn-xs btn-block btn-primary margin-top-10"><i class="fa fa-search margin-top-5 margin-bottom-5"></i> Buscar</div>
                </section>

            </div>
        }
    </div>

    @Html.Hidden("hdfId")
    @Html.Hidden("hdfRE")

    <div id="divGrid">
        @{
            Html.RenderPartial("Grid");
        }
    </div>

</div>

<div class="modal fade bs-example-modal-lg" id="modalNovaPasta" style="margin-top:50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                <h4 class="modal-title">Adicionar NCM</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-10">
                        <input class="form-control" type="text" id="txtItens">
                    </div>

                    <div class="col-md-2">

                        <div class="input-group-btn">
                            <button type="button" class="btn btn-default" onclick="AdicionarNCM();"><span class="glyphicon glyphicon-plus"></span></button>
                        </div>

                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4">

                        </br>
                        <input type="hidden" name="hfItens" id="hfItens" />
                        <table id="tblItens" cellpadding="0" cellspacing="0" style="width:100%">
                            <thead>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnFecharNCM" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" onclick="SalvarNCM();">Salvar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section head {
    <script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
}

@section pagespecific {

    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/Scripts/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Scripts/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugin/datatable-responsive/datatables.responsive.min.js"></script>
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    <script src="~/Scripts/Metso.js"></script>

    <!-- Page Script -->
    <script src="~/Scripts/views/_global.js"></script>
    <script src="~/Scripts/views/Fornecedores/Fornecedores_Index.js"></script>
