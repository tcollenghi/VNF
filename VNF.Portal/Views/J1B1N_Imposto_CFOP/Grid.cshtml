@model System.Data.DataTable
<!-- NEW COL START -->
<!-- Widget ID (each widget will need unique ID)-->

<div class="jarviswidget jarviswidget-color-blueDark" data-widget-editbutton="false">

    <header class="navigation-wrap">
        <div class="col-md-12 col-xs-12">
            <div class="btn-group margin-top-5 right">
                <a class="btn btn-primary" data-toggle="modal" data-target="#modalNovaImpostoCFOP" onclick="Novo()">
                    <i class="fa fa-plus"></i>
                    Novo
                </a>
                <a class="btn btn-primary" data-toggle="modal" data-target="#modalNovaImpostoCFOP" onclick="Editar('EDITAR')">
                    <i class="fa fa-pencil"></i>
                    Editar
                </a>
                <a class="btn btn-danger" onclick="Excluir()">
                    <i class="fa fa-trash-o"></i>
                    Excluir
                </a>
            </div>
        </div>
    </header>

    <input type="hidden" id="hdfImposto" />
    <input type="hidden" id="hdfCFOP" />
    <input type="hidden" id="hdfTipo" />
    <input type="hidden" id="hdfBase" />

    <div id="divData">
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body no-padding">
            <table id="dttTabela" datatables_fixedheader="top" datatables_fixedheader_offsettop="60" class="table table-striped table-bordered table-hover table-click" width="100%">
                <thead>
                    <tr>
                        <th>Imposto</th>
                        <th>CFOP</th>
                        <th>Tipo de Imposto</th>
                        <th>Base Escritura</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {
                            for (int i = 0; i < Model.Rows.Count; i++)
                            {

                                string cfop = Model.Rows[i]["CFOP"].ToString().Replace("\\", "\\\\");
                                string tipo = Model.Rows[i]["TIPO_IMPOSTO"].ToString().Replace("\\", "\\\\");
                                string pbbase = Model.Rows[i]["BASE_ESCRITURAR"].ToString().Replace("\\", "\\\\");                                
                                <tr id="i" onclick="selectRow('@Model.Rows[i]["IMPOSTO"].ToString()','@cfop', '@tipo', '@pbbase')">
                                    <td>@Model.Rows[i]["IMPOSTO"].ToString()</td>
                                    <td>@Model.Rows[i]["CFOP"].ToString()</td>
                                    <td>@Model.Rows[i]["TIPO_IMPOSTO"].ToString()</td>
                                    <td>@Model.Rows[i]["BASE_ESCRITURAR"].ToString()</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
