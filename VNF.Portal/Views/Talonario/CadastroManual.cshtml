    </div>
</div>

@Html.Hidden("hdfId")

<div id="divGrid">
    @{
        Html.RenderPartial("GridTalonario");
    }
</div>

@section pagespecific {

    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/Scripts/views/Talonario/Talonario.js"></script>
